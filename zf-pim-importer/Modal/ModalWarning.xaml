<Window x:Class="ZFPimImporter.ModalWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ZFPimImporter"
        xmlns:zfPimImporter="clr-namespace:ZFPimImporter"
        mc:Ignorable="d"
        Title="Warning" Height="170" Width="400"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        zfPimImporter:WindowBehavior.HideCloseButton="True"
        >
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Background="Snow" Name="txtSomeBox" Margin="30" TextWrapping="Wrap" Text="Please select a Segment first"  />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="btnOkay" Margin="10" Width="100"  Click="BtnOkay_OnClick" Content="Okay" /> 
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
</Window>
